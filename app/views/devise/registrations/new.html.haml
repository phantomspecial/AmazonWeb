%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "off"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name, autofocus: true
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name, autofocus: true
  .field
    = f.label :nickname
    %br/
    = f.text_field :nickname, autofocus: true
  .field
    = f.label :postal_code
    %br/
    = f.text_field :postal_code, autofocus: true
  .field
    = f.label :pref
    %br/
    = f.text_field :pref, autofocus: true
  .field
    = f.label :city
    %br/
    = f.text_field :city, autofocus: true
  .field
    = f.label :street
    %br/
    = f.text_field :street, autofocus: true
  .field
    = f.label :apartment_roomnumber
    %br/
    = f.text_field :apartment_roomnumber, autofocus: true
  .field
    = f.label :telnumber
    %br/
    = f.text_field :telnumber, autofocus: true

  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
